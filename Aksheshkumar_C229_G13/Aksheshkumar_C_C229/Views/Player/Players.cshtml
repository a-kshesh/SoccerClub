@model IEnumerable<Player>

<h3>Players</h3>
<hr />
<div class="row list">
    <div class="col-xl-4 col-md-3">
        <div class="card mainCard mb-3 p-0">
            <a class="link" asp-action="NewPlayer">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 icon">
                            <i class="fa fa-plus fa-2x userIcon"></i>
                        </div>
                        <div class="col-lg-9">
                            <h4 class="card-title">New Player</h4>
                            <p class="card-text">Click to Add New player</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    @foreach (Player p in @Model)
    {
        <div class="col-xl-4 col-md-3 mb-3 ">
            <div class="card mainCard pb-0">
                <a class="link" asp-action="PlayerDetails" asp-route-playerId="@p.PlayerId" asp-route-isEditable="false" >
                    <div class="card-body pb-0 pr-0">
                        <div class="row">
                            <div class="col-lg-3 icon">
                                <i class="fa fa-user fa-3x userIcon"></i>
                            </div>
                            <div class="col-lg-9 pl-0">
                                <h4 class="card-title">@p.Name</h4>
                                @if (p.Club != null)
                                {
                                    <p class="card-text">@p.Club.Name</p>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
</div>


